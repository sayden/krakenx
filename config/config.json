{
  "express": {
    "view engine": "jsx",
    "view": "require:react-engine/lib/expressView",
    "view cache": false,
    "views": "path:./public"
  },

  "view engines": {
      "jsx": {
          "module": "react-engine/lib/server",
          "renderer": {
            "method": "create",
              "arguments": [{
                  "routes": "require:./router/react.jsx",
                  "routesFilePath": "path:./router/react.jsx"
              }]
          }
      }
  },

  "middleware": {
    "static": {
      "module": {
        "arguments": ["path:./.build"]
      }
    },
    "router": {
      "enabled":true,
      "module": {
        "arguments": [
          {
            "directory": "path:./router"
          }
        ]
      }
    },

    //flash messaging middleware
    "flash": {
      "priority": 91,
      "enabled": true,
      "module": {
        "name":"connect-flash",
        "method": "flash"
      }
    },
    //add the user to the response object
    "injectUser": {
      "enabled": true,
      "priority": 112,
      "module": {
        "name":"path:./modules/user/models/UserSchema.js",
        "method": "injectUser"
      }
    }
  }
}
