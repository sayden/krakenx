    "kraken-js": "^1.0.1",
    "localizr": "^0.1.6",
    "node-jsx": "^0.13.3",
    "react": "0.13.3",
    "react-engine": "^2.0.0",
    "react-router": "^0.13.3",
    "font-awesome": "~4.4.0",
    "bootstrap": "~3.3.5",
    "bootstrap-social": "~4.9.1",
    "mongoose": "~4.2.4",
    "passport-oauth": "~1.0.0",
    "passport": "~0.3.0",
    "passport-google": "~0.3.0",
    "crypto": "0.0.3",
    "generate-password": "~1.1.1",
    "validator": "~4.2.1",
    "owasp-password-strength-test": "~1.3.0",
    "passport-google-oauth": "~0.2.0",
    "connect-flash": "~0.1.1",
    "passport-facebook": "~2.0.0",
    "react-tools": "~0.13.3",
    "deasync": "~0.1.4"
  },
  "devDependencies": {
    "grunt": "^0.4.5",
    "grunt-browserify": "^2.1.4",
    "grunt-config-dir": "^0.3.2",
    "grunt-contrib-clean": "^0.5.0",
    "grunt-contrib-jshint": "^0.10.0",
    "grunt-copy-to": "0.0.10",
    "grunt-localizr": "^0.1.4",
    "grunt-mocha-cli": "^1.13.0",
    "mocha": "^1.18.0",
    "reactify": "^1.1.0",
    "require-globify": "^1.1.0",
    "supertest": "^0.9.0",
    "grunt-run": "~0.5.2",
    "grunt-nodemon": "~0.4.0",
    "grunt-concurrent": "~2.0.4",
    "grunt-node-inspector": "~0.4.1",
    "grunt-contrib-watch": "~0.6.1",
    "chai": "~3.4.1",
    "babel-core": "~6.1.21",
    "babel-register": "~6.1.18",
    "jsdom": "~7.0.2",
    "mocha-jsdom": "~1.0.0",
    "casperjs": "~1.1.0-beta3",
    "mocha-casperjs": "~0.5.4",
    "istanbul-react": "~1.1.0",
    "jshint": "~2.9.1-rc1"
  },
  "generator-kraken": {
    "version": "1.1.2",
    "template": false,
    "css": false,
    "js": "browserify",
    "task": "grunt"
  }
