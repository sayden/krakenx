{
  "name": "krakenx",
  "version": "0.1.0",
  "description": "A krakenjs based app with JSX templating and React with NoSQL persistence",
  "author": "Mario Castro",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers .:test/compiler.js --require test/dom-mocks.js test/*.jsx --reporter spec --ui bdd",
    "browserify": "browserify -t reactify -t require-globify modules/main.js -o modules/bundle.js",
    "install-all": "npm install; bower install",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha -- -u exports -R spec --compilers jsx:test/compiler.js test"
  },
